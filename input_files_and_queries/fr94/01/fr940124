<!-- PJG /ITAG -->

<!-- PJG ITAG l=56 g=1 f=1 -->
PART 907_HOMEOWNERSHIP DEMONSTRATION PROGRAM IN OMAHA, NEBRASKA 
<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG /ITAG -->

<!-- PJG ITAG l=70 g=1 f=1 -->
